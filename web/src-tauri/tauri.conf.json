{
  "$schema": "https://schema.tauri.app/config/2.0.0",
  "productName": "NeoMind",
  "version": "0.5.8",
  "identifier": "com.neomind.neomind",
  "build": {
    "beforeDevCommand": "npm run dev",
    "beforeBuildCommand": "npm run build",
    "devUrl": "http://localhost:5173",
    "frontendDist": "../dist"
  },
  "app": {
    "windows": [
      {
        "label": "main",
        "title": "NeoMind",
        "width": 1400,
        "height": 900,
        "minWidth": 1024,
        "minHeight": 768,
        "resizable": true,
        "fullscreen": false,
        "center": true,
        "decorations": true,
        "transparent": false,
        "hiddenTitle": false,
        "visible": true
      }
    ],
    "security": {
      "csp": {
        "default-src": "'self' customprotocol: asset:",
        "connect-src": "ipc: http://ipc.localhost https://localhost:9375 ws://localhost:9375 ws://localhost:5173 tauri://*",
        "font-src": "'self' https://fonts.gstatic.com",
        "img-src": "'self' asset: http://asset.localhost blob: data: https:",
        "style-src": "'self' https://fonts.googleapis.com",
        "script-src": "'self' 'wasm-unsafe-eval'"
      }
    },
    "withGlobalTauri": true
  },
  "bundle": {
    "active": true,
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "category": "Developer Tool",
    "shortDescription": "Edge AI Platform",
    "longDescription": "NeoMind - Edge-deployed LLM agent platform for IoT automation",
    "macOS": {
      "frameworks": [],
      "minimumSystemVersion": "10.15",
      "entitlements": "./Entitlements.plist",
      "providerShortName": null,
      "signingIdentity": null,
      "hardenedRuntime": true,
      "dmg": {
        "windowSize": {
          "width": 660,
          "height": 400
        },
        "appPosition": {
          "x": 180,
          "y": 200
        },
        "applicationFolderPosition": {
          "x": 480,
          "y": 200
        }
      }
    },
    "windows": {
      "certificateThumbprint": null,
      "digestAlgorithm": "sha256",
      "timestampUrl": "",
      "webviewInstallMode": {
        "type": "embedBootstrapper"
      },
      "nsis": {
        "displayLanguageSelector": false,
        "languages": ["English", "SimpChinese"]
      }
    },
    "linux": {
      "deb": {
        "depends": [
          "libwebkit2gtk-4.1-0",
          "libssl3"
        ]
      },
      "appimage": {
        "bundleMediaFramework": false
      }
    }
  },
  "plugins": {
    "shell": {
      "open": true
    }
  }
}
